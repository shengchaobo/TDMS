<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="utf8" />
	<package name="FileofMain" namespace="/" extends="struts-default">	
		
		
		<action name="findFiles_1" class="cn.nit.action.FileofMain_1"  method="findFiles_1">
		<param name="inputPath">/WEB-INF/FileofMain</param>	
        </action>
        
        
        <action name="downloadFileofMain" class="cn.nit.action.FileofMain_1">
			<param name="inputPath">/WEB-INF/FileofMain</param>	
            <result name="success" type="stream">
            	<param name="contentType">application/octet-stream;charset=UTF-8</param>
                <param name="contentDisposition">attachment;filename="downFile.xls"</param>
                <param name="inputName">downloadFile</param>
      				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
            </result>
        </action>

	</package>
</struts>