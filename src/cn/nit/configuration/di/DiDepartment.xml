<struts>
	<package name="pages/DiDepartment" namespace="/pages/DiDepartment" extends="struts-default">
		<!-- 加载所有部门 -->
	    <action name="loadDiDepartment" class="cn.nit.action.di.DiDepartmentAction" method="loadDepartment" />
	    
	      <!-- 初始化加载科研单位性质 -->
	    <action name="loadDIDepartmentSci" class="cn.nit.action.di.DiDepartmentAction" method="loadDIDepartmentSci" />
	     <!-- 初始化加载学院 -->
	    <action name="loadDIDepartmentAca" class="cn.nit.action.di.DiDepartmentAction" method="loadDIDepartmentAca" />
	    <!-- 初始化所有部门（分页） -->
		<action name="loadDes" class="cn.nit.action.di.DiDepartmentAction" method="loadDes" />   	   
		 <action name="insert" class="cn.nit.action.di.DiDepartmentAction" method="insert" />
	    <action name="edit" class="cn.nit.action.di.DiDepartmentAction" method="edit" />
	    <action name="deleteByIds" class="cn.nit.action.di.DiDepartmentAction" method="deleteByIds" />
	</package>
</struts>