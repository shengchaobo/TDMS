<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<package name="t16" namespace="/pages/T16" extends="struts-default">
		<!-- 添加数据 -->
	    <action name="insert" class="cn.nit.action.table1.T16Action" method="insert" />
	    <!-- 显示数据 -->
	    <action name="loadInfo" class="cn.nit.action.table1.T16Action" method="loadInfo" />
	     <!-- 编辑数据 -->
	    <action name="save" class="cn.nit.action.table1.T16Action" method="save" />
	    <!-- 删除数据 -->
	    <action name="deleteByYear" class="cn.nit.action.table1.T16Action" method="deleteByYear" />
	      <!-- 数据查询 -->
	    <action name="singleSearch" class="cn.nit.action.table1.T16Action" method="auditingConditions"/>
	    
	         <!-- 数据导出 -->
	    <action name="dataExport" class="cn.nit.action.table1.T16Action" method="execute">
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;fileName="表1-6办学指导思想.xls"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>
	    
	     <!-- 文件批量上传 -->
	    <action name="uploadFile" class="cn.nit.action.UploadAction" method="uploadFile">
	    	<!-- 上传文件对应的处理类 -->
	    	<param name="className">cn.nit.excel.imports.table1.UndergraCSBaseTeaExcel</param>
	    	<!-- 处理类对应的方法名 -->
	    	<param name="methodName">batchInsert</param>
	    </action>
	    
	     <!-- 模板下载 -->
	    <action name="downloadModel" class="cn.nit.action.DownloadModelAction" method="execute">
	    <!-- 模板路径 -->
	    	<param name="fileName">cn/nit/excel/downloads/T151.xls</param>
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;filename="${saveFile}"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>
	</package>
</struts>