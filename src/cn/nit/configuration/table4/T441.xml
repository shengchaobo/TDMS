<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<package name="pages/T441" namespace="/pages/T441" extends="struts-default">
		<!-- 初始化加载所有专业带头人信息（用于分页系统） -->
	    <action name="loadLeaderInfo" class="cn.nit.action.table4.T441_Action" method="loadLeaderInfo" />
   		<!-- 插入新的专业带头人信息 -->
	    <action name="insert"  class="cn.nit.action.table4.T441_Action" method="insert" ></action>
	       	 <!-- 文件批量上传 -->
	    <action name="uploadFile" class="cn.nit.action.UploadAction" method="uploadFile">
	    	<!-- 上传文件对应的处理类 -->
	    	<param name="className">cn.nit.excel.imports.table4.T441_Excel</param>
	    	<!-- 处理类对应的方法名 -->
	    	<param name="methodName">batchInsert</param>
	    </action>  
	     
   	    <!-- 模板下载 -->
	    <action name="downloadModel" class="cn.nit.action.DownloadModelAction" method="execute">
	    <!-- 模板路径 -->
	    	<param name="fileName">cn/nit/excel/downloads/T441.xls</param>
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;filename="${saveFile}"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>

	    <!-- 删除相应教职工 -->
	    <action name="deleteByIds" class="cn.nit.action.table4.T441_Action"  method="deleteByIds" />

	    <!-- 更新相应教职工 -->
	    <action name="edit" class="cn.nit.action.table4.T441_Action"  method="edit" />
	    	    
   	    <!-- 数据导出 -->
	    <action name="dataExport" class="cn.nit.action.table4.T441_Action" method="execute">
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;fileName="${excelName}"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>	    	    	    
	</package>
</struts>