<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<package name="pages/T47" namespace="/pages/T47" extends="struts-default">
		<!-- 初始化加载所有教学单位荣誉信息（用于分页系统） -->
	    <action name="loadHonorInfo" class="cn.nit.action.table4.T47_Action" method="loadHonorInfo" />
   		<!-- 插入新的教学单位荣誉信息 -->
	    <action name="insert"  class="cn.nit.action.table4.T47_Action" method="insert" ></action>	

   	    <!-- 文件批量上传 -->
	    <action name="uploadFile" class="cn.nit.action.UploadAction" method="uploadFile">
	    	<!-- 上传文件对应的处理类 -->
	    	<param name="className">cn.nit.excel.imports.table4.T47_Excel</param>
	    	<!-- 处理类对应的方法名 -->
	    	<param name="methodName">batchInsert</param>
	    </action>  
	     
   	    <!-- 模板下载 -->
	    <action name="downloadModel" class="cn.nit.action.DownloadModelAction" method="execute">
	    <!-- 模板路径 -->
	    	<param name="fileName">cn/nit/excel/downloads/T47.xls</param>
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;filename="${saveFile}"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>

	    <!-- 删除相应教职工 -->
	    <action name="deleteByIds" class="cn.nit.action.table4.T47_Action"  method="deleteByIds" />

	    <!-- 更新相应教职工 -->
	    <action name="edit" class="cn.nit.action.table4.T47_Action"  method="edit" />
	    
  	    <!-- 修改审核状态 -->
	    <action name="updateCheck" class="cn.nit.action.table4.T47_Action"  method="updateCheck" />
	    
  	    <!-- 审核通过全部 -->
	    <action name="checkAll" class="cn.nit.action.table4.T47_Action"  method="checkAll" />
	    	    
   	    <!-- 数据导出 -->
	    <action name="dataExport" class="cn.nit.action.table4.T47_Action" method="execute">
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;fileName="${excelName}.xls"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>	       
	</package>
</struts>