<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<package name="pages/T4_11" namespace="/pages/T4_11" extends="struts-default">
		<!-- 初始化加载各学院出版教材信息（用于分页系统） -->
	    <action name="loadSerInfo" class="cn.nit.action.table4.T4_11_Action" method="loadSerInfo" />
	    
	    <!-- 文件批量上传 -->
	    <action name="uploadFile" class="cn.nit.action.UploadAction" method="uploadFile">
	    	<!-- 上传文件对应的处理类 -->
	    	<param name="className">cn.nit.excel.imports.table4.T4_11_Excel</param>
	    	<!-- 处理类对应的方法名 -->
	    	<param name="methodName">batchInsert</param>
	    </action> 
	    
   		<!-- 插入新的学院出版教材信息 -->
	    <action name="insert"  class="cn.nit.action.table4.T4_11_Action" method="insert" ></action>
	    
   	    <!-- 删除相应教职工 -->
	    <action name="deleteByIds" class="cn.nit.action.table4.T4_11_Action"  method="deleteByIds" />

	    <!-- 更新相应教职工 -->
	    <action name="edit" class="cn.nit.action.table4.T4_11_Action"  method="edit" />
	    	    
   	    <!-- 数据导出 -->
	    <action name="dataExport" class="cn.nit.action.table4.T4_11_Action" method="execute">
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;fileName="${excelName}.xls"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>	           	    
	</package>
</struts>