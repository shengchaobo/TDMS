<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
	<package name="T621" namespace="/pages/T621" extends="struts-default">
		<!-- 添加条目 -->
	    <action name="insert" class="cn.nit.action.table6.T621_Action" method="insert" />
	    <!-- 加载数据 -->
	    <action name="loadData" class="cn.nit.action.table6.T621_Action" method="loadData" />
	    <!-- 文件批量上传 -->
	    <action name="uploadFile" class="cn.nit.action.UploadAction" method="uploadFile">
	    	<!-- 上传文件对应的处理类 -->
	    	<param name="className">cn.nit.excel.imports.table6.T621_Excel</param>
	    	<!-- 处理类对应的方法名 -->
	    	<param name="methodName">batchInsert</param>
	    </action>
	    <!-- 模板下载 -->
	    <action name="downloadModel" class="cn.nit.action.DownloadModelAction" method="execute">
	    	<!-- 模板路径        暂定  需要进一步的修改！！！！！！ -->
	    	<param name="fileName">cn/nit/excel/downloads//table6/T621.xls</param>
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;filename="${saveFile}"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>
	    <!-- 数据查询 -->
	    <action name="singleSearch" class="cn.nit.action.table6.T621_Action" method="auditingConditions"/>
	    <!-- 数据编辑 -->
	    <action name="edit" class="cn.nit.action.table6.T621_Action" method="edit"/>
	    <!-- 删除数据 -->
	    <action name="deleteByIds" class="cn.nit.action.table6.T621_Action" method="deleteByIds" />
	    <!-- 数据导出 -->
	    <action name="dataExport" class="cn.nit.action.table6.T621_Action" method="execute">
	    	<result name="success" type="stream">
	    		<!-- 指定下载文件的类型，下面表示无限制 -->
				<param name="contentType">application/octet-stream;charset=UTF-8</param>
				<!-- 流对象名字 -->
				<param name="inputName">inputStream</param>
				<!-- 文件名转码 -->
				<param name="contentDisposition">attachment;fileName="表621_近一届本科生分专业招生录取情况.xls"</param>
				<!-- 下载文件缓冲大小 -->
				<param name="bufferSize">4096</param>
	    	</result>
	    </action>
	</package>
</struts>